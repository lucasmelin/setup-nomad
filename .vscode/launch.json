    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/jest",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}